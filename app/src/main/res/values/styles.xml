<resources>

    <attr name="pageBackground" format="color|reference" />

    <!--theme-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/material_cyan_500</item>
        <item name="colorPrimaryDark">@color/material_cyan_700</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="pageBackground">@color/material_white</item>
        <item name="android:textColorPrimary">@color/material_textBlack_text</item>
        <item name="android:textColorPrimaryInverse">@color/material_textWhite_text</item>

    </style>

    <!--edittext style-->
    <style name="EditTextStyle" parent="Base.V7.Widget.AppCompat.EditText" />

    <style name="EditTextStyle.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--button style-->
    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button"></style>

    <style name="ButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">?colorAccent</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

</resources>
