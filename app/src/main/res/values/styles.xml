<resources>

    <attr name="pageBackground" format="color|reference" />

    <!--theme-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/md_cyan_500</item>
        <item name="colorPrimaryDark">@color/md_cyan_700</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="pageBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@color/md_textBlack_text</item>
        <item name="android:textColorPrimaryInverse">@color/md_textWhite_text</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityNullAnim</item>
    </style>

    <style name="AppTheme.BgWhite">
        <item name="android:windowBackground">@color/md_white</item>
    </style>

    <style name="ActivityNullAnim">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="AppTheme.CyanStatusBar">
        <item name="android:statusBarColor">?colorPrimaryDark</item>
    </style>

    <!--edittext style-->
    <style name="BaseEditTextStyle" parent="Base.V7.Widget.AppCompat.EditText" />

    <style name="EditTextStyle" parent="BaseEditTextStyle">
        <item name="backgroundTint">?colorAccent</item>
    </style>

    <style name="EditTextStyle.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--button style-->
    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button"></style>

    <style name="ButtonStyle" parent="BaseButtonStyle">
        <item name="backgroundTint">?colorAccent</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

</resources>
