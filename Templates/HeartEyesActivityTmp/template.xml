<?xml version="1.0"?>
<template name="HeartEyesActivity"
    description="HeartEyesActivity."
    format="5"
    minApi="7"
    minBuildApi="14"
    requireAppTheme="true"
    revision="6">

    <category value="Activity" />
    <formfactor value="Mobile" />

    <parameter
        id="pageName"
        name="Page Name"
        constraints="class|nonempty|unique"
        default=""
        help="将创建的activity的名字"
        type="string" />

    <parameter
        id="activityName"
        name="Activity Name"
        type="string"
        constraints="class|nonempty|unique"
        default="Fragment"
        suggest="${pageName}Activity"
        help="activity的类名" />

    <parameter
        id="layoutName"
        name="Activity Layout Name"
        type="string"
        constraints="layout|nonempty|unique"
        default="activity_"
        suggest="activity_${classToResource(activityName)}"
        help="activity的布局文件名" />

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_basic_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
